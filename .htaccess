# Ativa o mecanismo de reescrita
RewriteEngine On

# Define o diretório base como raiz
RewriteBase /

# Redireciona tudo para a pasta public, exceto se for um arquivo ou diretório existente
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ public/$1 [L]

# Impede listagem de diretórios
Options -Indexes

# Bloqueia acesso a arquivos e pastas sensíveis
<FilesMatch "(^\.env|composer\.(json|lock)|\.git|\.htaccess|php\.ini|README\.md|LICENSE)">
    Require all denied
</FilesMatch>

# Bloqueia arquivos ocultos
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

# Segurança adicional via cabeçalhos HTTP
<IfModule mod_headers.c>
    Header always append X-Frame-Options "SAMEORIGIN"
    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Redireciona para HTTPS (opcional, se não estiver habilitado via painel da Hostinger)
<IfModule mod_rewrite.c>
    RewriteCond %{HTTPS} off
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>
