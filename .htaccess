# Redirecionar para a pasta 'public'
RewriteEngine On
RewriteRule ^$ public/ [L]
RewriteRule (.*) public/$1 [L]

# Forçar HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Forçar WWW (opcional, substitua 'seudominio.com' pelo seu domínio real)
RewriteCond %{HTTP_HOST} ^seudominio\.com [NC]
RewriteRule ^(.*)$ https://www.seudominio.com/$1 [L,R=301]

# Definir a página inicial padrão (dentro da pasta public)
DirectoryIndex index.php