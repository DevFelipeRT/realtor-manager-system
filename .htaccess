RewriteEngine On

# Impede listagem de diretórios (navegação por URL)
Options -Indexes

# Segurança básica adicional
AddDefaultCharset UTF-8
Header set X-Content-Type-Options "nosniff"
Header set X-Frame-Options "SAMEORIGIN"
Header set X-XSS-Protection "1; mode=block"

# Bloqueia acesso a arquivos PHP, exceto os que estão na pasta public
RewriteCond %{THE_REQUEST} \.php [NC]
RewriteCond %{REQUEST_URI} !^/public/ [NC]
RewriteRule .* - [F,L]

# Redireciona todas as requisições que não forem arquivos ou diretórios existentes
# para a pasta /public, sem alterar a URL no navegador
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ public/$1 [L]
