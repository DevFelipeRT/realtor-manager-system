# Ativa o mecanismo de reescrita
RewriteEngine On
RewriteBase /

# Redireciona tudo para a pasta public, exceto se for arquivo ou diretório real
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ public/$1 [L]

# Impede listagem de diretórios
Options -Indexes

# Bloqueia acesso a arquivos e pastas sensíveis
<FilesMatch "(^\.env|composer\.(json|lock)|\.git|\.htaccess|php\.ini|README\.md|LICENSE)">
    Require all denied
</FilesMatch>

# Bloqueia arquivos ocultos (ex: .git, .env)
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

# Segurança adicional via cabeçalhos HTTP
<IfModule mod_headers.c>
    Header always append X-Frame-Options "SAMEORIGIN"
    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Redireciona para HTTPS, se necessário
<IfModule mod_rewrite.c>
    RewriteCond %{HTTPS} off
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>
