# Impede listagem de diretórios
Options -Indexes

# Permite apenas o acesso ao index.php diretamente
<FilesMatch "^(index\.php)$">
    Require all granted
</FilesMatch>

# Bloqueia qualquer outro script PHP ou arquivos ocultos
<FilesMatch "\.(php|phar)$">
    Require all denied
</FilesMatch>

<FilesMatch "^\.">
    Require all denied
</FilesMatch>

# Segurança adicional via cabeçalhos HTTP
<IfModule mod_headers.c>
    Header always append X-Frame-Options "SAMEORIGIN"
    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>
