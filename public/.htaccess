# Ativar o mecanismo de reescrita para rotas internas
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redireciona todas as requisições para index.php, exceto arquivos e diretórios reais
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.php [QSA,L]
</IfModule>

# Impedir listagem de diretórios
Options -Indexes

# Definir index padrão
DirectoryIndex index.php